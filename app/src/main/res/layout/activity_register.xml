<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_huge"
            android:paddingRight="@dimen/padding_huge">

            <TextView
                style="@style/SimpleTextView"
                android:layout_centerVertical="true"
                android:text="欢迎注册"
                android:textColor="@color/colorBlack"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_huge"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="@dimen/padding_huge"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/padding_small"
            app:cardMaxElevation="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_big">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_login_phone"
                        style="@style/SimpleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_normal"
                        android:drawablePadding="@dimen/padding_big"
                        android:gravity="center_vertical"
                        android:hint="手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/padding_big"
                        android:paddingRight="@dimen/padding_big" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_login_code"
                            style="@style/SimpleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_normal"
                            android:drawablePadding="@dimen/padding_big"
                            android:gravity="center_vertical"
                            android:hint="验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingLeft="@dimen/padding_big"
                            android:paddingRight="@dimen/padding_big" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_login_code"
                        style="@style/SimpleTextView"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_big"
                        android:text="获取验证码"
                        android:textColor="@color/colorTheme" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_login_pwd"
                            style="@style/SimpleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_normal"
                            android:drawablePadding="@dimen/padding_big"
                            android:gravity="center_vertical"
                            android:hint="输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/padding_big"
                            android:paddingRight="@dimen/padding_big" />

                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/cb_login_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_big"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_login_pwd_again"
                            style="@style/SimpleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_normal"
                            android:drawablePadding="@dimen/padding_big"
                            android:gravity="center_vertical"
                            android:hint="确认密码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/padding_big"
                            android:paddingRight="@dimen/padding_big" />

                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/cb_login_pwd_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_big"
                        android:visibility="visible" />
                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_invite_code"
                        style="@style/SimpleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_normal"
                        android:drawablePadding="@dimen/padding_big"
                        android:gravity="center_vertical"
                        android:hint="邀请码"
                        android:paddingLeft="@dimen/padding_big"
                        android:paddingRight="@dimen/padding_big" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_login_register"
            style="@style/SimpleTextView"
            android:layout_width="@dimen/height_huge"
            android:layout_height="@dimen/height_normal"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/padding_huge"
            android:layout_marginRight="@dimen/padding_huge"
            android:background="@drawable/shape_solid_theme_50dp"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/tv_login_ok"
            style="@style/SimpleTextView"
            android:layout_width="@dimen/height_huge"
            android:layout_height="@dimen/height_normal"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_huge"
            android:text="登录"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>